<launch>

    <!-- publish camboard_tcp tf -->
    <node name="camboard_tcp_tf"
          pkg="tf"
          type="static_transform_publisher"
          args="-0.1569 -0.0327 0.0536 0.2464 0.0178 -1.5397 /$(env ROBOT)_link_tcp /$(env ROBOT)_link_camboard_tcp 100" >
    </node>

    <!-- Starts PMD Camboard camera node -->
    <include file="$(find iri_pmdcamera)/launch/camboard_images_rectified.launch" >
        <arg name="camera"           value="camboard" />
        <arg name="frame_id"         value="/$(env ROBOT)_link_camboard_tcp" />
        <arg name="camera_type"      value="1" />
        <arg name="integration_time" value="700" />
        <arg name="modulation_freq"  value="21000000" />
        <arg name="respawn"          value="true" />
    </include> 
    
    <!-- Tool center point for camboard camera -->
    <node name="$(env ROBOT)_camboard_ik" pkg="iri_wam_tcp_ik" type="iri_wam_tcp_ik">
       <param name="robot_base" type="str" value="/$(env ROBOT)_link_base" />
       <param name="robot_tcp"  type="str" value="/$(env ROBOT)_link_7" />
       <param name="tool_tcp"   type="str" value="/$(env ROBOT)_link_camboard_tcp" />
       <remap from="$(env ROBOT)_camboard_ik/wamik" to="$(env ROBOT)_ik/wamik" />
    </node>

</launch>
