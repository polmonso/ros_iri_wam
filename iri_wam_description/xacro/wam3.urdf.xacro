<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="wam3" params="parent">

    <link name="wam_fk/wam3">
        <inertial>
            <mass value="1.7251" />
            <origin xyz="0 0 0.225" rpy="0 0 0" />
            <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="0.1"  iyz="0.0"  izz="0.1" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <geometry name="wam_fk/wam3_visual">
                <mesh filename="package://iri_wam_description/mesh/wam3.stl" scale="1.0 1.0 1.0" />
            </geometry>
            <material name="Grey" >
                <color rgba="0.75 0.75 0.75 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
            <geometry name="wam_fk/wam3_collision">
                <mesh filename="package://iri_wam_description/mesh/wam3.stl" scale="1.0 1.0 1.0" />
<!--                <box size="0.10 0.10 0.10"/> -->
            </geometry>
            <contact_coefficients kd="1.0" kp="1000.0" mu="0"/>
        </collision>
    </link>
    <gazebo reference="wam_fk/wam3">
        <material>Gazebo/Grey</material>
        <selfCollide>true</selfCollide>
    </gazebo>

    <joint name="j3_joint" type="revolute">
        <parent link="${parent}"/>
        <child link="wam_fk/wam3"/>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <limit lower="-2.8" upper="2.8" effort="30" velocity="2.0"/>
        <!--  <safety_controller k_velocity="0.5"/>-->
        <dynamics damping="100"/>
    </joint>

    <transmission type="pr2_mechanism_model/SimpleTransmission" name="j3_transmission">
      <actuator name="j3" />
      <joint name="j3_joint" />
      <mechanicalReduction>1</mechanicalReduction>
      <motorTorqueConstant>1</motorTorqueConstant>
     <!-- <pulsesPerRevolution>90000</pulsesPerRevolution>-->
    </transmission>

  </xacro:macro>

</robot>
