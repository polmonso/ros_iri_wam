<!-- -->

<launch>

  <!-- load robot defined machines -->
  <include file="$(find tibi_dabo_base)/machines/tibi_dabo.machines" />

  <group ns="$(env ROBOT)">

    <!-- ros wiimote node -->
    <node pkg="wiimote"
          type="wiimote_node.py"
          name="joy"
          respawn="true"
          machine="nav" />

    <!-- wiimote teleop -->
    <node pkg="iri_wiimote_teleop"
          type="iri_wiimote_teleop"
          name="iri_wiimote_teleop"
          machine="nav">
      <remap from="/$(env ROBOT)/cmd_vel"
               to="/$(env ROBOT)/iri_segway_rmp200/cmd_vel" />
    </node>

  </group>

</launch>