<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="wam2" params="parent">

    <link name="wam_fk/wam2">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
             <mass value="4.8487" />
            <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="0.1"  iyz="0.0"  izz="0.1" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <geometry name="wam_fk/wam2_visual">
                <mesh filename="package://iri_wam_description/mesh/wam2.stl" scale="1.0 1.0 1.0" />
            </geometry>
            <material name="Grey" >
                <color rgba="0.75 0.75 0.75 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
            <geometry name="wam_fk/wam2_collision">
                <mesh filename="package://iri_wam_description/mesh/wam2.stl" scale="1.0 1.0 1.0" />
<!--                <box size="0.10 0.10 0.10"/> -->
            </geometry>
        </collision>
    </link>
    <gazebo reference="wam_fk/wam2">
        <material>Gazebo/Grey</material>
        <selfCollide>true</selfCollide>
    </gazebo>

    <joint name="j2" type="revolute">
        <parent link="${parent}"/>
        <child link="wam_fk/wam2"/>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
        <limit lower="-2.0" upper="2.0" effort="10" velocity="1.0"/>
        <dynamics damping="200.5"/> 
    </joint>

    <transmission type="pr2_mechanism_model/SimpleTransmission" name="wam_fk/wam2_transmission">
      <actuator name="wam_fk/wam2_rotation" />
      <joint name="j2" />
      <mechanicalReduction>1</mechanicalReduction>
      <motorTorqueConstant>1</motorTorqueConstant>
      <pulsesPerRevolution>90000</pulsesPerRevolution>
    </transmission>

  </xacro:macro>

</robot>
