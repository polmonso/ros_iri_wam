<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<property name="M_PI" value="3.1415926535897931" />

  <xacro:macro name="wam7" params="parent">

    <link name="wam_fk/wam7">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
             <mass value="0.0557" />
            <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="0.1"  iyz="0.0"  izz="0.1" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <geometry name="wam_fk/wam7_visual">
                <mesh filename="package://iri_wam_description/mesh/wam7.stl" scale="1.0 1.0 1.0" />
            </geometry>
            <material name="Grey" >
                <color rgba="0.75 0.75 0.75 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
            <geometry name="wam_fk/wam7_collision">
                <mesh filename="package://iri_wam_description/mesh/wam7.stl" scale="1.0 1.0 1.0" />
<!--                <box size="0.10 0.10 0.10"/> -->
            </geometry>
        </collision>
    </link>
    <gazebo reference="wam_fk/wam7">
        <material>Gazebo/Grey</material>
        <selfCollide>true</selfCollide>
    </gazebo>

    <joint name="j7" type="revolute">
        <parent link="${parent}"/>
        <child link="wam_fk/wam7"/>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2} 0 0" />
        <axis xyz="0 0 1" />
        <limit lower="-2.2" upper="2.2" effort="10" velocity="1.0"/>
        <dynamics damping="200.5"/> 
    </joint>

    <transmission type="pr2_mechanism_model/SimpleTransmission" name="wam_fk/wam7_transmission">
      <actuator name="wam_fk/wam7_rotation" />
      <joint name="j7" />
      <mechanicalReduction>1</mechanicalReduction>
      <motorTorqueConstant>1</motorTorqueConstant>
      <pulsesPerRevolution>90000</pulsesPerRevolution>
    </transmission>

  </xacro:macro>

</robot>
