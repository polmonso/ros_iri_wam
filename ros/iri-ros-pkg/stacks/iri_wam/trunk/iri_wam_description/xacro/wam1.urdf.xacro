<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="wam1" params="parent">

    <link name="wam_fk/wam1">
        <inertial>
            <mass value="8.3936" />
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <geometry name="wam_fk/wam1_visual">
                <mesh filename="package://iri_wam_description/mesh/wam1.stl" scale="1.0 1.0 1.0" />
            </geometry>
            <material name="Grey" >
                <color rgba="0.75 0.75 0.75 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
            <geometry name="wam_fk/wam1_collision">
                <mesh filename="package://iri_wam_description/mesh/wam1.stl" scale="1.0 1.0 1.0" />
<!--                <box size="0.20 0.40 0.40"/>
-->
            </geometry>
        </collision>
    </link>
    <gazebo reference="wam_fk/wam1">
        <material>Gazebo/Grey</material>
        <selfCollide>true</selfCollide>
    </gazebo>

    <joint name="j1" type="revolute">
        <parent link="${parent}"/>
        <child link="wam_fk/wam1"/>
        <origin xyz="0.22 0.14 0.346" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <limit lower="-2.6" upper="2.6" effort="10" velocity="1.0"/>
        <dynamics damping="200.5"/> 
    </joint>

    <transmission type="pr2_mechanism_model/SimpleTransmission" name="wam_fk/wam1_transmission">
      <actuator name="wam_fk/wam1_rotation" />
      <joint name="j1" />
      <mechanicalReduction>1</mechanicalReduction>
      <motorTorqueConstant>1</motorTorqueConstant>
      <pulsesPerRevolution>90000</pulsesPerRevolution>
    </transmission>

  </xacro:macro>

</robot>
